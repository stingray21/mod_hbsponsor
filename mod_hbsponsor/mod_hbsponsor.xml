<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
	<name>MOD_HBSPONSOR</name>
	<creationDate>2018-02-09 21:06 GMT+0100</creationDate>
	<author>Jochen Stehle</author>
	<authorEmail>stingray21@gmx.de</authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.0.0</version>
	<description>MOD_HBSPONSOR_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_hbsponsor">mod_hbsponsor.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>mod_hbsponsor.xml</filename>
	</files>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="Add slider for HB">https://www.example.com/mod_hbsponsor.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="width"
					type="text"
					label="MOD_HBSPONSOR_WIDTH_LABEL"
					description="MOD_HBSPONSOR_WIDTH_DESCRIPTION"
					default="240"
				/>
				<field
					name="height"
					type="text"
					label="MOD_HBSPONSOR_HEIGHT_LABEL"
					description="MOD_HBSPONSOR_HEIGHT_DESCRIPTION"
					default="100"
				/>
				<field
					name="ad_json"
					type="textarea"
					label="MOD_HBSPONSOR_JSON_LABEL"
					description="MOD_HBSPONSOR_JSON_DESCRIPTION"
				/>
			</fieldset>
			<fieldset
					name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
